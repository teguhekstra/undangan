<script>
function openInvite(){opening.style.display='none';music.play();}
const p=new URLSearchParams(location.search);
const t=p.get('to')||'Tamu Undangan';
guestName.innerText=t;
qr.src=`https://api.qrserver.com/v1/create-qr-code/?size=200x200&data=${t}`;
function openMaps(){window.open('https://maps.google.com/?q=Gedung+Serbaguna')}
const target=new Date("2026-04-20").getTime();
setInterval(()=>{
const n=new Date().getTime();const d=target-n;if(d<0)return;
countdown.innerHTML=`
<div class="cd">${Math.floor(d/86400000)}<br>Hari</div>
<div class="cd">${Math.floor(d%86400000/3600000)}<br>Jam</div>
<div class="cd">${Math.floor(d%3600000/60000)}<br>Menit</div>
<div class="cd">${Math.floor(d%60000/1000)}<br>Detik</div>`},1000);
function kirimWA(){
if(!nama.value||!pesan.value)return alert('Lengkapi data');
window.open(`https://wa.me/6281389770774?text=RSVP%20Undangan%20Teguh%20%26%20Welly%0ANama:%20${nama.value}%0APesan:%20${pesan.value}`)}
